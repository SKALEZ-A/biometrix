  "data_schema": {
    "user_profile": {
      "fields": [
        {"name": "user_id", "type": "string", "required": true, "encrypted": false},
        {"name": "name", "type": "string", "required": true, "encrypted": false},
        {"name": "email", "type": "string", "required": true, "encrypted": false, "validated": "email"},
        {"name": "enrolled_biometrics", "type": "array", "items": "biometric_record", "encrypted": true},
        {"name": "risk_score", "type": "float", "default": 0.0, "range": [0, 1]},
        {"name": "last_activity", "type": "timestamp", "required": false},
        {"name": "device_fingerprint", "type": "string", "encrypted": true}
      ]
    },
    "biometric_record": {
      "fields": [
        {"name": "type", "type": "enum", "values": ["face", "fingerprint", "voice"], "required": true},
        {"name": "embedding", "type": "array", "items": "float", "length": 128, "encrypted": true},
        {"name": "quality_score", "type": "float", "range": [0, 1], "required": true},
        {"name": "capture_timestamp", "type": "timestamp", "required": true},
        {"name": "device_info", "type": "object", "schema": {"os": "string", "browser": "string", "ip": "string"}},
        {"name": "liveness_score", "type": "float", "range": [0, 1], "required": true},
        {"name": "challenge_response", "type": "string", "required": false}
      ]
    },
    "fraud_alert": {
      "fields": [
        {"name": "alert_id", "type": "string", "required": true},
        {"name": "user_id", "type": "string", "required": true},
        {"name": "timestamp", "type": "timestamp", "required": true},
        {"name": "fraud_score", "type": "float", "range": [0, 1], "required": true},
        {"name": "severity", "type": "enum", "values": ["low", "medium", "high"], "required": true},
        {"name": "reason", "type": "string", "required": true},
        {"name": "evidence", "type": "object", "schema": {"anomaly_type": "string", "confidence": "float"}},
        {"name": "actions_taken", "type": "array", "items": "string", "required": false},
        {"name": "resolved", "type": "boolean", "default": false}
      ]
    }
