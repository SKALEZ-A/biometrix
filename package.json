{
  "name": "biometric-fraud-prevention-system",
  "version": "1.0.0",
  "description": "Enterprise-grade biometric fraud prevention platform with AI-powered detection",
  "private": true,
  "workspaces": [
    "packages/*",
    "services/*",
    "apps/*"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:biometric\" \"npm run dev:transaction\" \"npm run dev:voice\" \"npm run dev:fraud-detection\"",
    "dev:biometric": "cd services/biometric-service && npm run dev",
    "dev:transaction": "cd services/transaction-service && npm run dev",
    "dev:voice": "cd services/voice-service && npm run dev",
    "dev:fraud-detection": "cd services/fraud-detection-service && npm run dev",
    "dev:web": "cd apps/web-sdk && npm run dev",
    "dev:admin": "cd apps/admin-dashboard && npm run dev",
    "build": "npm run build:shared && npm run build:services && npm run build:apps",
    "build:shared": "cd packages/shared && npm run build",
    "build:services": "npm run build:biometric && npm run build:transaction && npm run build:alert && npm run build:compliance",
    "build:biometric": "cd services/biometric-service && npm run build",
    "build:transaction": "cd services/transaction-service && npm run build",
    "build:alert": "cd services/alert-service && npm run build",
    "build:compliance": "cd services/compliance-service && npm run build",
    "build:apps": "cd apps/web-sdk && npm run build && cd ../admin-dashboard && npm run build",
    "test": "jest --coverage",
    "test:unit": "jest --testPathPattern=unit",
    "test:integration": "jest --testPathPattern=integration",
    "lint": "eslint . --ext .ts,.tsx",
    "format": "prettier --write \"**/*.{ts,tsx,json,md}\"",
    "docker:build": "docker-compose build",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "k8s:deploy": "kubectl apply -f infrastructure/kubernetes/",
    "migrate": "npm run migrate:mongo && npm run migrate:neo4j",
    "migrate:mongo": "node scripts/migrate-mongo.js",
    "migrate:neo4j": "node scripts/migrate-neo4j.js"
  },
  "devDependencies": {
    "@types/jest": "^29.5.0",
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "concurrently": "^8.2.0",
    "eslint": "^8.45.0",
    "jest": "^29.6.0",
    "prettier": "^3.0.0",
    "ts-jest": "^29.1.0",
    "typescript": "^5.1.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
